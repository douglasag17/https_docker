<h2 class='vertical'> All Routes Shared </h2>
<div class="row">
    {{#each routes}}
        <div class="col-md-5 mt-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5>Name of the Route: {{ name }}</h5>
                    <h5>Route: {{ route }}</h5>
                    <h5>Date: {{ date }} </h5>
                    <!-- DELETE REQUEST -->
                    <form action="/route/delete/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn btn-danger btn-block btn-sm">Delete</button>
                    </form>

                    <!-- Show map -->
                    <form>
                        <a href="/map/{{_id}}" class="btn btn-primary btn-block btn-sm mt-2">Show Map</a>
                    </form>
                </div>
            </div>
        </div>
    {{/each}}
</div>